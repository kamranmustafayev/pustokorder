@model RegisterVM
<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Home</a></li>
					<li class="breadcrumb-item active">Login</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form method="post" asp-action="register">
					<div class="login-form">
						<h4 class="login-title">New Customer</h4>
						<p><span class="font-weight-bold">I am a new customer</span></p>
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="FullName">Full Name</label>
								<input class="mb-0 form-control" asp-for="FullName" placeholder="Enter your full name">
								<span class="text-danger" asp-validation-for="FullName"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="Email">Email</label>
								<input class="mb-0 form-control" asp-for="Email" placeholder="Enter your email">
								<span class="text-danger" asp-validation-for="Email"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="UserName">Username</label>
								<input class="mb-0 form-control" asp-for="UserName" placeholder="Enter your username">
								<span class="text-danger" asp-validation-for="UserName"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="Password">Password</label>
								<input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="ConfirmPassword">Repeat Password</label>
								<input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your password">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">Register</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
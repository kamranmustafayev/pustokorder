@model LoginVM
<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Home</a></li>
					<li class="breadcrumb-item active">Login</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
				<form method="post" asp-action="login">
					<div class="login-form">
						<h4 class="login-title">Returning Customer</h4>
						<p><span class="font-weight-bold">I am a returning customer</span></p>
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>
						<div class="row">
							<div class="col-md-12 col-12 mb--5">
								<label for="email">Enter your username here...</label>
								<input class="mb-0 form-control" asp-for="UserName" placeholder="Enter your username...">
								<span class="text-danger" asp-validation-for="UserName"></span>
							</div>
							<div class="col-12 mb--5">
								<label for="password">Password</label>
								<input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-md-12 mb--10">
								<div class="form-check">
									<input class="form-check-input" asp-for="RememberMe" /> <label class="form-check-label mb-4" asp-for="RememberMe"></label>
								</div>
							</div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">Login</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>

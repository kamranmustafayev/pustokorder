@model List<Feature>
@{
    int count = 0;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-11">
            <h2 class='text-primary mb-2'>Features</h2>
        </div>
        <div class="col-1">
            <a asp-controller="feature" asp-action="create" class="btn btn-success"><i class="fas fa-plus"></i> Create</a>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Feature feature in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>

                            <td>@feature.Title</td>
                            <td>@feature.Description</td>
                            <td><i class="@feature.Icon"></i></td>
                            <td>
                                <a asp-controller="feature" asp-action="update" asp-route-id="@feature.Id" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-controller="feature" asp-action="delete" asp-route-id="@feature.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Count == 0)
            {
                <p class="text-center">There are no features.</p>
            }
        </div>
    </div>
</div>
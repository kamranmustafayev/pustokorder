@model List<Book>
@{
    int count = 0;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-11">
            <h2 class='text-primary mb-2'>Books</h2>
        </div>
        <div class="col-1">
            <a asp-action="create" class="btn btn-success"><i class="fas fa-plus"></i> Create</a>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Book name</th>
                        <th scope="col">Author</th>
                        <th scope="col">Genre</th>
                        <th scope="col">CostPrice</th>
                        <th scope="col">SellPrice</th>
                        <th scope="col">Discount</th>
                        <th scope="col">Availability</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Book book in Model)
                    {
                        count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@book.Name</td>
                                <td>@book.Author.FullName</td>
                                <td>@book.Genre.Name</td>
                                <td>@book.CostPrice</td>
                                <td>@book.SellPrice</td>
                                <td>@book.Discount</td>
                                <td>@book.IsAvailable</td>
                                <td>
                                    <a asp-action="update" asp-route-id="@book.Id" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                    <a asp-action="delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
            @if (Model.Count == 0)
            {
                    <p class="text-center">There are no authors.</p>
            }
        </div>
    </div>
</div>
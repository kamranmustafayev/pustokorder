@model List<Brand>
@{
    int count = 0;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-11">
            <h2 class='text-primary mb-2'>Brands</h2>
        </div>
        <div class="col-1">
            <a asp-controller="brand" asp-action="create" class="btn btn-success"><i class="fas fa-plus"></i> Create</a>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Brand brand in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img style="height: 50px;" src="~/uploads/images/brands/@brand.ImageUrl"></td>
                            <td>
                                <a asp-controller="brand" asp-action="update" asp-route-id="@brand.Id" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-controller="brand" asp-action="delete" asp-route-id="@brand.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Count == 0)
            {
                <p class="text-center">There are no brands.</p>
            }
        </div>
    </div>
</div>